{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assists": { "enabled": true },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/payload-types.ts",
      "**/.tmp",
      "**/.git",
      "**/.hg",
      "**/.pnp.*",
      "**/.svn",
      "**/.yarn/**",
      "**/build",
      "**/dist/**",
      "**/node_modules",
      "src/services/database/migrations/**/*",
      "src/app/(payload)/**/*",
      "**/pnpm-lock.yaml",
      "**/package-lock.json",
      "**/bun.lockb",
      "**/bun.lock"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "multiline",
    "bracketSpacing": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off"
      },
      "nursery": {
        "noDuplicateProperties": "off",
        "noUnknownTypeSelector": "off",
        "noUnknownPseudoClass": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "off",
        "useExhaustiveDependencies": "off"
      },
      "a11y": {
        "useFocusableInteractive": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": true,
      "cssModules": true
    },
    "assists": {
      "enabled": true
    }
  }
}
